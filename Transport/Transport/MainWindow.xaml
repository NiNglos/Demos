        <Grid x:Name="gridTest" Margin="350,0,0,0" Visibility="Collapsed" Grid.ColumnSpan="2">
            <Grid.Background>
                <ImageBrush Stretch="UniformToFill" ImageSource="Resourses/fon.png"/>
